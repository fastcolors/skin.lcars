<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="musiclcarsview">
        <control type="image">
            <visible>Container.Content(artists)</visible>
            <width>1280</width>
            <height>720</height>
            <texture>artistsbg.jpg</texture>
        </control>
        <control type="panel" id="50">
            <visible>!Container.Content(artists)</visible>
            <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
            <onleft>9000</onleft>
            <top>100</top>
            <left>200</left>
            <width>1045</width>
            <height>520</height>
            <itemlayout width="260" height="260">
                <control type="image">
                    <left>10</left>
                    <top>4</top>
                    <width>250</width>
                    <height>250</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>$VAR[poster]</texture>
                </control>
                <control type="textbox">
                    <visible>Container.Content(albums) | Container.Content(artists)</visible>
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>240</width>
                    <textcolor>yellow</textcolor>
                    <shadowcolor>88000000</shadowcolor>
                    <info>ListItem.Label</info>
                </control>
                 <control type="textbox">
                    <visible>Window.IsVisible(MyMusicSongs.xml)</visible>
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>240</width>
                    <info>ListItem.Label</info>
                </control>
                <control type="textbox">
                    <visible>Container.Content(years) | Container.Content(genres)</visible>
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>240</width>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="260" height="260">
                <control type="image">
                    <left>6</left>
                    <width>258</width>
                    <height>258</height>
                    <aspectratio>stretch</aspectratio>
                    <texture>$VAR[poster]</texture>
                    <bordertexture colordiffuse="red">white.png</bordertexture>
                    <bordersize>4</bordersize>
                </control>
                <control type="textbox">
                    <visible>Container.Content(albums) | Container.Content(artists)</visible>
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>240</width>
                    <textcolor>yellow</textcolor>
                    <shadowcolor>88000000</shadowcolor>
                    <info>ListItem.Label</info>
                </control>
                <control type="textbox">
                    <visible>Window.IsVisible(MyMusicSongs.xml)</visible>
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>240</width>
                    <info>ListItem.Label</info>
                </control>
                <control type="textbox">
                    <visible>Container.Content(years) | Container.Content(genres)</visible>
                    <top>10</top>
                    <right>10</right>
                    <align>right</align>
                    <font>font30</font>
                    <width>240</width>
                    <info>ListItem.Label</info>
                </control>

            </focusedlayout>
        </control>
        <control type="list" id="501">
            <visible>Container.Content(artists)</visible>
            <centertop>360</centertop>
            <left>250</left>
            <height>484</height>
            <width>300</width>
            <onup>noop</onup>
            <ondown>noop</ondown>
            <onleft>9000</onleft>
            <onright>300</onright>
            <orientation>vertical</orientation>
            <itemlayout height="44" width="300">
                <control type="image">
                    <width>300</width>
                    <height>40</height>
                    <texture flipx="true" border="20" colordiffuse="design">whiterounded.png</texture>
                </control>
                <control type="label">
                    <left>295</left>
                    <width>290</width>
                    <height>40</height>
                    <align>right</align>
                    <aligny>center</aligny>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout height="44" width="300">
                <control type="image">
                    <animation effect="fade" start="100" end="50" condition="!Control.Hasfocus(501)" reversible="true">Conditional</animation>
                    <width>300</width>
                    <height>40</height>
                    <texture flipx="true" border="20" colordiffuse="blue">whiterounded.png</texture>
                </control>
                <control type="label">
                    <left>295</left>
                    <width>290</width>
                    <height>40</height>
                    <align>right</align>
                    <aligny>center</aligny>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
         <control type="list" id="300">

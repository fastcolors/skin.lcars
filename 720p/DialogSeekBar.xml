<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="115">
    <defaultcontrol always="true">901</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <zorder>5</zorder>
    <include>OpenClose</include>
    <visible>![Window.IsVisible(SliderDialog) | Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(VideoBookmarks) | Window.IsActive(script-XBMC-Subtitles-main.xml)]</visible>
    <visible>Window.IsVisible(FullScreenVideo) + [Window.IsActive(videoosd.xml) | Player.Seeking | Player.DisplayAfterSeek | Player.Forwarding | Player.Rewinding | Player.Caching | Player.Paused]</visible>
    <animation effect="fade" start="0" end="100" time="400">Visible</animation>
    <animation effect="fade" start="100" end="0" time="100">Hidden</animation>
    <controls>
        <control type="image">
            <width>1280</width>
            <height>720</height>
            <texture>osb.png</texture>
        </control>
        <control type="group">
            <description>PROGRESS</description>
            <width>1200</width>
            <top>362</top>
            <control type="progress" description="Cache Progress">
                <centerleft>640</centerleft>
                <width>1100</width>
                <height>14</height>
                <info>Player.ProgressCache</info>
            </control>
            <control type="progress" id="23" description="Progress Bar">
                <centerleft>640</centerleft>
                <width>1100</width>
                <height>14</height>
                <info>Player.Progress</info>
            </control>
        </control>
        <control type="group">
            <control type="group" description="Top Bar">
                <visible>!Window.IsActive(142)</visible>
                <control type="label">
                    <visible>Pvr.IsPlayingTV</visible>
                    <posx>60</posx>
                    <top>17</top>
                    <width>150</width>
                    <font>font35_title</font>
                    <height>30</height>
                    <textcolor>yellow</textcolor>
                    <label>$LOCALIZE[142] $INFO[System.Time]</label>
                </control>
                <control type="label">
                    <visible>!Pvr.IsPlayingTV</visible>
                    <posx>60</posx>
                    <top>12</top>
                    <width>75</width>
                    <height>30</height>
                    <textcolor>white</textcolor>
                    <label>$LOCALIZE[142] $INFO[System.Time]</label>
                </control>
                <control type="label">
                    <visible>!Pvr.IsPlayingTV</visible>
                    <posx>60</posx>
                    <top>32</top>
                    <width>75</width>
                    <height>30</height>
                    <textcolor>white</textcolor>
                    <label>$INFO[Player.Time]</label>
                </control>
                <control type="label" description="End time">
                    <visible>!Pvr.IsPlayingTV</visible>
                    <posx>260</posx>
                    <top>12</top>
                    <width>75</width>
                    <height>30</height>
                    <align>right</align>
                    <textcolor>white</textcolor>
                    <label>END: $INFO[Player.FinishTime]</label>
                </control>
                <control type="label">
                    <visible>!Pvr.IsPlayingTV</visible>
                    <posx>260</posx>
                    <top>32</top>
                    <height>30</height>
                    <width>75</width>
                    <align>right</align>
                    <textcolor>white</textcolor>
                    <label>- $INFO[Player.TimeRemaining]</label>
                </control>
                <!--control type="label" description="Next item">
                    <visible>!IsEmpty(VideoPlayer.NextTitle)</visible>
                    <posx>300</posx>
                    <top>10</top>
                    <width>1320</width>
                    <height>60</height>
                    <align>center</align>
                    <aligny>center</aligny>
                    <label>$INFO[VideoPlayer.NextTitle,[COLOR=gray]$LOCALIZE[209]:  [/COLOR]]</label>
                </control-->
            </control>
			<control type="label" description="Seek time label">
                <visible>![player.forwarding | player.rewinding]</visible>
                <visible>Player.DisplayAfterSeek</visible>
                <include>winding</include>
                <label>$INFO[Player.SeekOffset]</label>
            </control>

            <control type="label" description="Buffer icon">
                <visible>Player.Caching</visible>
                <include>winding</include>
                <label>BUFFERING...</label>
                <!--<animation effect="rotate" start="360" end="0" center="auto" time="1200" loop="true" pulse="true" condition="true">conditional</animation>-->
            </control>
            <control type="label" description="Pause">
                <visible>Player.Paused + !Player.Caching</visible>
                <include>winding</include>
                <label>PAUSE</label>
            </control>
            <control type="label" description="FF">
                <visible>player.forwarding2x</visible>
                <include>winding</include>
                <label>2x FFW</label>
            </control>
            <control type="label" description="FFFF">
                <visible>player.forwarding4x</visible>
                <include>winding</include>
                <label>4x FFW</label>
            </control>
            <control type="label" description="2FFFF">
                <visible>player.forwarding8x</visible>
                <include>winding</include>
                <label>8x FFW</label>
            </control>
            <control type="label" description="4FFFF">
                <visible>player.forwarding16x</visible>
                <include>winding</include>
                <label>16x FFW</label>
            </control>
            <control type="label" description="8FFFF">
                <visible>player.forwarding32x</visible>
                <include>winding</include>
                <label>32x FFW</label>
            </control>
            <control type="label" description="RF">
                <visible>player.rewinding2x</visible>
                <include>winding</include>
                <label>2x RW</label>
            </control>
            <control type="label" description="RFFF">
                <visible>player.rewinding4x</visible>
                <include>winding</include>
                <label>4x RW</label>
            </control>
            <control type="label" description="2RFFF">
                <visible>player.rewinding8x</visible>
                <include>winding</include>
                <label>8x RW</label>
            </control>
            <control type="label" description="4RFFF">
                <visible>player.rewinding16x</visible>
                <include>winding</include>
                <label>16x RW</label>
            </control>
            <control type="label" description="8RFFF">
                <visible>player.rewinding32x</visible>
                <include>winding</include>
                <label>32x RW</label>
            </control>
        </control>
    </controls>
</window>

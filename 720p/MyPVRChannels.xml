<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">50</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <views>50</views>
    <controls>
        <control type="group">
            <control type="image">
                <width>1280</width>
                <height>720</height>
                <texture>pvrbg.jpg</texture>
            </control>
            <include>allwindows</include>
        </control>
        <include>PVRbutt</include> <!-- PVR Button -->
        <control type="list" id="50">
            <centertop>360</centertop>
            <left>250</left>
            <height>484</height>
            <width>300</width>
            <onup>noop</onup>
            <ondown>noop</ondown>
            <onleft>9000</onleft>
            <onright>noop</onright>
            <orientation>vertical</orientation>
            <itemlayout height="44" width="300">
                <control type="image">
                    <width>300</width>
                    <height>40</height>
                    <texture flipx="true" border="20" colordiffuse="design">whiterounded.png</texture>
                </control>
                <control type="label">
                    <width>290</width>
                    <height>40</height>
                    <align>right</align>
                    <aligny>center</aligny>
                    <info>ListItem.Label</info>
                </control>
                <control type="label">
                    <left>5</left>
                    <width>280</width>
                    <height>40</height>
                    <align>left</align>
                    <aligny>center</aligny>
                    <info>ListItem.ChannelNumber</info>
                </control>
            </itemlayout>
            <focusedlayout height="44" width="300">
                <control type="image">
                    <width>300</width>
                    <height>40</height>
                    <texture flipx="true" border="20" colordiffuse="white">whiterounded.png</texture>
                </control>
                <control type="label">
                    <width>290</width>
                    <height>40</height>
                    <align>right</align>
                    <aligny>center</aligny>
                    <info>ListItem.Label</info>
                </control>
                <control type="label">
                    <left>5</left>
                    <width>280</width>
                    <height>40</height>
                    <align>left</align>
                    <aligny>center</aligny>
                    <info>ListItem.ChannelNumber</info>
                </control>
            </focusedlayout>
        </control>
        <control type="group">
            <description>Small Media Window</description>
            <top>130</top>
            <left>630</left>
            <visible>Control.IsVisible(50)</visible>
            <control type="image">
				<top>-28</top>
				<centerleft>306</centerleft>
				<width>390</width>
				<height>214</height>
				<!--<aspectratio>keep</aspectratio>-->
				<texture background="true" border="10">videowindowbg.png</texture>
			</control>
            <control type="image">
                <left>5</left>
                <top>5</top>
                <width>600</width>
                <height>150</height>
                <aspectratio scalediffuse="false">keep</aspectratio>
                <texture  background="true" >$INFO[ListItem.Icon]</texture>
                <visible>!Player.HasVideo</visible>
            </control>
            <control type="videowindow">
                <left>5</left>
                <top>5</top>
                <width>600</width>
                <height>150</height>
                <visible>Player.HasVideo</visible>
                <animation effect="slide" start="0,0" end="-2000,0" time="0">WindowClose</animation>
            </control>


        </control>
        <control type="grouplist">
            <top>300</top>
            <left>630</left>
            <itemgap>15</itemgap>
            <control type="label">
                <width>600</width>
                <height>30</height>
                <textcolor>orange</textcolor>
                <scroll>false</scroll>
                <font>font30_title</font>
                <align>center</align>
                <visible>Container(50).ListItem.HasEpg</visible>
                <label>$INFO[Container(50).ListItem.ChannelNumber] • $INFO[Container(50).ListItem.label]</label>
            </control>
            <control type="label">
                <width>600</width>
                <height>25</height>
                <textcolor>white</textcolor>
                <font>font30_title</font>
                <scroll>false</scroll>
                <align>left</align>
                <visible>Container(50).ListItem.HasEpg</visible>
                <label>$INFO[Container(50).ListItem.StartTime] • [COLOR=red]$INFO[Container(50).ListItem.Title][/COLOR] $INFO[Container(50).ListItem.EpisodeName, (,)]</label>
            </control>
            <control type="progress">
                <description>Progressbar</description>
                <left>100</left>
                <width>600</width>
                <height>10</height>
                <visible>Container(50).ListItem.HasEpg</visible>
                <info>Container(50).ListItem.Progress</info>
            </control>
            <control type="textbox">
                <description>Plot Value for TVShow</description>
                <textcolor>white</textcolor>
                <width>600</width>
                <height>145</height>
                <align>justify</align>
                <label>$INFO[Container(50).ListItem.Plot]</label>
                <autoscroll time="2000" delay="3000" repeat="5000">true</autoscroll>
            </control>
            <control type="label">
                <width>600</width>
                <height>25</height>
                <textcolor>white</textcolor>
                <font>font30_title</font>
                <align>left</align>
                <scroll>false</scroll>
                <visible>!IsEmpty(Container(50).ListItem.NextTitle)</visible>
                <label>$INFO[Container(50).ListItem.EndTime] • [COLOR=red]$INFO[Container(50).ListItem.NextTitle][/COLOR]</label>
            </control>
        </control>
    </controls>
</window>

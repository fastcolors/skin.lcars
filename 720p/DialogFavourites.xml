<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
	<defaultcontrol always="true">450</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="group">
			<top>40</top>
			<visible>!Window.IsVisible(FileBrowser)</visible>
			<animation effect="slide" start="1100,0" end="0,0" time="400" tween="quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="1100,0" time="400" tween="quadratic" easing="out">WindowClose</animation>
			<control type="image">
				<description>background image</description>
				<left>600r</left>
				<top>20</top>
				<width>600</width>
				<height>600</height>
				<texture border="130">dialog.png</texture>
			</control>
			<control type="button">
				<description>Close Window button</description>
				<left>580r</left>
				<top>38</top>
				<width>30</width>
				<height>30</height>
				<label>-</label>
				<font>-</font>
				<onclick>PreviousMenu</onclick>
				<texturefocus>closefocus.png</texturefocus>
				<texturenofocus>close.png</texturenofocus>
				<onleft>450</onleft>
				<onright>450</onright>
				<onup>450</onup>
				<ondown>450</ondown>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
			<control type="image">
				<left>400r</left>
				<top>30</top>
				<width>200</width>
				<height>200</height>
				<aspectratio align="center">keep</aspectratio>
				<!--fadetime>IconCrossfadeTime</fadetime-->
				<texture>$INFO[ListItem.Icon]</texture>
				<bordertexture colordiffuse="red">white.png</bordertexture>
                <bordersize>4</bordersize>
			</control>
			<control type="list" id="450">
				<left>480r</left>
				<top>250</top>
				<width>450</width>
				<height>380</height>
				<onup>450</onup>
				<onleft>Dialog.Close(Favourites)</onleft>
				<onright>450</onright>
				<ondown>450</ondown>
				<pagecontrol>-</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="45">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>370</width>
						<height>40</height>
						<texture colordiffuse="design" border="20">whiterounded.png</texture>
					</control>
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>350</width>
						<height>40</height>
						<font>font24_title</font>
						<align>left</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="45">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>370</width>
						<height>40</height>
						<texture border="20" colordiffuse="green" >whiterounded.png</texture>
					</control>
					<control type="label">
						<left>10</left>
						<top>0</top>
						<width>350</width>
						<height>40</height>
						<font>font24_title</font>
						<align>left</align>
						<aligny>center</aligny>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</focusedlayout>
			</control>
			<!--control type="label">
				<description>Page label</description>
				<right>30</right>
				<top>670</top>
				<width>350</width>
				<height>30</height>
				<align>right</align>
				<aligny>center</aligny>
				<font>font12</font>
				<textcolor>grey</textcolor>
				<label>([COLOR=red]$INFO[Container(450).NumItems][/COLOR]) $LOCALIZE[31025] - $LOCALIZE[31024] ([COLOR=red]$INFO[Container(450).CurrentPage]/$INFO[Container(450).NumPages][/COLOR])</label>
			</control-->
		</control>
	</controls>
</window>

                <control type="label">
                    <left>295</left>
                    <width>290</width>
                    <height>40</height>
                    <align>right</align>
                    <aligny>center</aligny>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
             <content>$INFO[ListItem.DBID,musicdb://artists/]</content>
        </control>
        <control type="list" id="301">
            <visible>Container.Content(artists)</visible>
